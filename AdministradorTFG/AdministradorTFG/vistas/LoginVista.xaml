<Window x:Class="AdministradorTFG.vistas.LoginVista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio de Sesión"
        Width="400" Height="300"
        Background="#2C2F33" Foreground="White"
        FontFamily="Segoe UI" FontSize="14"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Email:" Grid.Row="0" VerticalAlignment="Center" />
        <TextBox x:Name="txtEmail" Grid.Row="0" Margin="94,32,20,33"
                 Background="#23272A" Foreground="White" BorderBrush="#7289DA" />

        <TextBlock Text="Contraseña:" Grid.Row="1" VerticalAlignment="Center" />
        <PasswordBox x:Name="txtPassword" Grid.Row="1" Margin="94,32,20,32"
                     Background="#23272A" Foreground="White" BorderBrush="#7289DA" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Iniciar Sesión" Width="140" Margin="10"
                    Background="#43B581" Foreground="White"
                    Click="BtnLogin_Click"/>
            <Button Content="Cancelar" Width="140" Margin="10"
                    Background="#F04747" Foreground="White"
                    Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
